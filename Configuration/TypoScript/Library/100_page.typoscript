# website head & stuff ------------------------------------------------------------------------------------------------------------
page = PAGE
page {

  # body Tag
  bodyTag >
  bodyTagCObject = TEXT
  bodyTagCObject.field = uid
  bodyTagCObject.wrap = <body id="uid|">

  # META ---------------------------------------------------------------------------------------------------------------
  meta {
    X-UA-Compatible = IE=edge
    X-UA-Compatible.httpEquivalent = 1

    viewport = width=device-width, initial-scale=1

    description.field = description
    description.ifEmpty (
      XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
    )
    robots = index,follow
  }

  # favicon
  # shortcutIcon = EXT:mf_provider/Resources/Public/Icons/favicon.png
  headerData.10 = TEXT
  headerData.10.value = <link rel="icon" type="image/png" sizes="32x32" href="/typo3conf/ext/provider/Resources/Public/Icons/favicon-32x32.png" />
  headerData.20 = TEXT
  headerData.20.value = <link rel="icon" type="image/png" sizes="16x16" href="/typo3conf/ext/provider/Resources/Public/Icons/favicon-16x16.png" />

  # cannonical tag
  # headerData.30 = TEXT
  # headerData.30.value = <link rel="canonical" href="http://www.XXXXXXXXXX.de|"  />

  # CSS ----------------------------------------------------------------------------------------------------------------
  includeCSS {
    file10 = EXT:provider/Resources/Public/Css/reset.css
    file20 = EXT:provider/Resources/Public/Css/demo.css
    #file20.disableCompression = 1
    #file20.excludeFromConcatenation = 1
  }

  # JAVASCRIPT ---------------------------------------------------------------------------------------------------------
  # JS: Head/file
  # includeJS {
  #   file10 = EXT:provider/Resources/Public/Js/modernizr-custom.js
  # }

  # jQuery inkl. fallback --------------------------------
  1000 = TEXT
  1000.value (
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"><script>window.jQuery || document.write('<script src="Js/jquery-3.3.1.min.js"><\/script>')</script>
  )

  # Webfontloader (+ inline-JS) ---------------------------
  # 1100 = TEXT
  # 1100.value (
  #   <script src="https://cdnjs.cloudflare.com/ajax/libs/webfont/1.6.28/webfontloader.js"></script>
  # )

  # JS: footer/file -------------------------------------
  includeJSFooter {
    # mobile navi
    file10 = EXT:provider/Resources/Public/Js/offcanvasnavi.js
  }

  # JS: footer/inline ------------------------------------
  # XYZ
  # jsFooterInline.10 = TEXT
  # jsFooterInline.10.value (
