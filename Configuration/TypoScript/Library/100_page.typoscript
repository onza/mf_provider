  # page template ---------------------------------------------------------------------------------------------------------------
  typeNum = 0

  bodyTag >
  bodyTagCObject = TEXT
  bodyTagCObject.dataWrap = <body id="uid{field:uid}">
  # if static: bodyTag = <body id="top">
  
  10 = FLUIDTEMPLATE
  10 {
    layoutRootPath = EXT:provider/Resources/Private/Pages/Layouts/
    partialRootPath = EXT:provider/Resources/Private/Pages/Partials/
    
    file = EXT:provider/Resources/Private/Pages/Templates/Default.html

    # template variables -------------------
    variables {
      content0 = CONTENT
      content0 {
        table = tt_content
        select.where = colPos=0
        select.orderBy = sorting
      }
      header < .content0
      header.select.where = colPos = 1
      main < .content0
      main.select.where = colPos = 2
      aside < .content0
      aside.select.where = colPos = 3

      # connect fe-layouts and be-layouts -------------------
      backendlayout = TEXT
      backendlayout.data = pagelayout
      backendlayout = CASE
      backendlayout {
        key.data = pagelayout

        # templates
        pagets__homepage = TEXT
        pagets__homepage.value = homepage
        pagets__firstlevelpage = TEXT
        pagets__firstlevelpage.value = firstlevelpage
        pagets__subpage = TEXT
        pagets__subpage.value = subpage
        # default < .pagets__subpage
      }
    }
  }

}